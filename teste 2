    coracaoCerto.onclick = () => {
      fase1.classList.add('hidden');
      fase2.classList.remove('hidden');
    };

    const senhaCorreta = "brava";
    function verificarSenha() {
      const input = document.getElementById('senha').value.trim().toLowerCase();
      const msg = document.getElementById('msgSenha');

      if (input === senhaCorreta) {
        fase2.classList.add('hidden');
        fase3.classList.remove('hidden');
        mostrarIntro(paginaAtual);
      } else {
        msg.textContent = "Hmm... tenta lembrar direitinho ğŸ¥º";
      }
    }

    // conteÃºdo final (mesmo cÃ³digo que vocÃª jÃ¡ usava)
    const conteudo = document.getElementById('conteudo');
    const botoes = document.getElementById('botoes');
    const paginasIntro = [
      `Eu sei que nem sempre fui o melhor pra vocÃª... JÃ¡ errei demais, e muitas vezes joguei fora as chances que vocÃª me deu.<br><br>Mas sabe, de verdade, nÃ£o foi por falta de amor, foi sÃ³ que eu tava meio perdido Ã s vezes.`,
      `VocÃª tem esse jeitinho bravo, menina brava, que eu amo demais... Mesmo quando fica sÃ©ria comigo, sÃ³ mostra o quanto vocÃª se importa, e isso me inspira a ser melhor pra vocÃª.`,
      `Por isso, hoje, aqui, eu faÃ§o um pedido diferente.<br><br>Se vocÃª disser "sim", prometo que vou fazer vocÃª a mulher mais feliz desse mundo. TÃ¡ pronta pra essa aventura comigo?`
    ];

    const paginaPedido = `
      <p>Desde o primeiro dia, mesmo de longe, vocÃª conquistou meu coraÃ§Ã£o com o seu jeitinho Ãºnico. Cada conversa, cada risada, cada momento contigo se tornou parte da histÃ³ria mais bonita que jÃ¡ vivi.</p>
      <p>Ã€ distÃ¢ncia, nosso amor provou que a conexÃ£o verdadeira nÃ£o conhece barreiras. Mesmo separados por telas, te sinto perto em cada detalhe do meu dia. VocÃª me inspira, me acalma e me faz querer ser melhor.</p>
      <p style="font-size: 1.6em; margin: 30px 0; color: #d6336c; font-weight: 700;">Quer namorar comigo? ğŸ’ğŸ’—</p>
    `;

    let paginaAtual = 0;

    function mostrarIntro(pagina) {
      conteudo.innerHTML = paginasIntro[pagina];
      botoes.innerHTML = '';

      if (pagina > 0) {
        const botaoVoltar = document.createElement('button');
        botaoVoltar.textContent = 'Voltar';
        botaoVoltar.onclick = () => {
          paginaAtual--;
          mostrarIntro(paginaAtual);
        };
        botoes.appendChild(botaoVoltar);
      }

      if (pagina < paginasIntro.length -1) {
        const botaoProximo = document.createElement('button');
        botaoProximo.textContent = 'PrÃ³ximo';
        botaoProximo.onclick = () => {
          paginaAtual++;
          mostrarIntro(paginaAtual);
        };
        botoes.appendChild(botaoProximo);
      } else {
        const botaoContinuar = document.createElement('button');
        botaoContinuar.textContent = 'Continuar';
        botaoContinuar.onclick = () => {
          mostrarPedido();
        };
        botoes.appendChild(botaoContinuar);
      }
    }

    function mostrarPedido() {
      conteudo.innerHTML = paginaPedido;
      botoes.innerHTML = '';

      const botaoSim = document.createElement('button');
      botaoSim.textContent = 'Sim, quero! ğŸ’–';
      botaoSim.onclick = () => {
        conteudo.innerHTML = `<h2 style='color: #d6336c;'>VocÃª acaba de deixar alguÃ©m MUITO feliz! ğŸ¥¹ğŸ’˜</h2><p>Prometo cuidar de vocÃª e fazer nossos dias inesquecÃ­veis.</p><p style='font-size: 2em; margin-top: 40px;'>ğŸ’â¤ï¸</p>`;
        botoes.innerHTML = '';
      };

      const botaoNao = document.createElement('button');
      botaoNao.textContent = 'NÃ£o, acho que nÃ£o';
      botaoNao.onclick = respostaNao;

      botoes.appendChild(botaoSim);
      botoes.appendChild(botaoNao);
    }

    let naoClickCount = 0;
    function respostaNao() {
      const frases = [
        'Ops! Parece que apertou no botÃ£o errado, bobinha! ğŸ˜œ',
        'Opa, errou de novo! TÃ¡ difÃ­cil, hein? ğŸ˜‚',
        'SÃ©rio mesmo? Vai tentar outra vez? Eu acredito! ğŸ˜†',
        'TÃ¡ teimando demais, viu! Mas tudo bem, tenta mais uma! ğŸ¤ª',
        'Ok, ok, Ãºltima chance! Quero ver essa coragem! ğŸ˜'
      ];

      const msg = frases[Math.min(naoClickCount, frases.length -1)];
      naoClickCount++;

      conteudo.innerHTML = `<p style="font-size: 1.4em; color: #aa0033;">${msg}<br><br>DÃ¡ pra tentar de novo, eu acredito em vocÃª!</p>`;
      botoes.innerHTML = '';

      const botaoTentar = document.createElement('button');
      botaoTentar.textContent = 'Tentar de novo';
      botaoTentar.onclick = () => {
        if (naoClickCount >= frases.length) naoClickCount = 0;
        mostrarPedido();
      };

      botoes.appendChild(botaoTentar);
    }
